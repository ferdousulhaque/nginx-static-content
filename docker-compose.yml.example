services:
  nginx:
    image: nginx:1.21.3-alpine
    container_name: webserver
    restart: unless-stopped
    ports:
      - 8080:8080
    volumes:
      - ./conf/nginx.conf:/etc/nginx/nginx.conf
      - ./logs:/var/log/nginx
      - ./content:/content
    # environment:
    # - NGINX_HOST=local-test.com
    # - NGINX_PORT=80